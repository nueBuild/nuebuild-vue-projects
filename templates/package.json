{
  "name": "<%- projectSlug -%>",
  "version": "<%- projectVersion -%>",<% if (projectDescription) { %>
  "description": "<%- projectDescription -%>",<% } %>
  "author": "<%- authorName -%>",
  "license": "<%- projectLicense -%>",<% if(projectRepo) { %>
  "repository": "<%- projectRepo -%>",<% } %><% if (mode =='component' || mode == 'component-library') { %>
  "main": "dist/<%- projectSlug -%>.umd.js",
  "module": "dist/<%- projectSlug -%>.esm.js",
  "unpkg": "dist/<%- projectSlug -%>.min.js",<% if (mode =='component') { %>
  "browser": {
    "./sfc": "src/components/<%- componentName -%>.vue"
  },<% } %>
  "files": [
    "dist/*",
    "src/*"
  ],<% } %>
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "vue-cli-service serve --fix --open",<% if (mode =='app') { %>
    "build": "vue-cli-service build",
    "build:pre": "vue-cli-service build --preprocess",<% } %><% if (mode =='component' || mode == 'component-library') { %>
    "build:lib": "npm run build:unpkg & npm run build:es & npm run build:umd",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/<%- projectSlug -%>.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/<%- projectSlug -%>.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/<%- projectSlug -%>.min.js",<% } %>
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "vue-cli-service lint",
    "test": "npm run test:unit npm run test:e2e",
    "test:unit": "node node_modules/jest/bin/jest.js --clearCache && vue-cli-service test:unit",
    "test:unit:watch": "vue-cli-service npm run test:unit --watchAll --notify --notifyMode change",
    "test:e2e": "vue-cli-service test:e2e --headless"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "lodash": "^4.17.11",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@ascendancyy/vue-cli-plugin-stylelint": "^1.1.0",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-e2e-cypress": "^3.1.2",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-plugin-unit-jest": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",<% if (mode =='component' || mode == 'component-library') { %>
    "minimist": "^1.2.0",<% } %>
    "node-sass": "^4.10.0",<% if (mode =='app') { %>
    "prerender-spa-plugin": "^3.4.0",<% } %><% if (mode =='component' || mode == 'component-library') { %>
    "rollup": "^0.66.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-uglify-es": "0.0.1",
    "rollup-plugin-vue": "^4.3.0",<% } %>
    "sass-loader": "^7.1.0",
    "stylelint": "^9.8.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.0",
    "vue-template-compiler": "^2.5.17",
    "vuepress": "^0.14.5"
  }
}
